---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx-deployment
  namespace: oci-csi
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
      - name: nginx
        image: nginx
        ports:
        - containerPort: 80
---
kind: Service
apiVersion: v1
metadata:
  name: nginx-service
  namespace: oci-csi
spec:
  selector:
    app: nginx
  type: LoadBalancer
  ports:
  - name: http
    port: 81
    targetPort: 80
